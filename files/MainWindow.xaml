<Window x:Class="bankapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bankapp"
        mc:Ignorable="d"
        Title="Super Banking System" Height="520" Width="900"
        ResizeMode="CanMinimize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,2" StartPoint="0,0">
            <GradientStop Color="#142D55"/>
            <GradientStop Color="#B7E3FF" Offset="3"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
